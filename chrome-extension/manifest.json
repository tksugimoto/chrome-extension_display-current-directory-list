{
	"name": "Display current directory List",
	"version": "0.1.0",
	"manifest_version": 2,

	"description": "ローカルファイル閲覧時に同一フォルダの一覧を表示",

	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},

	"content_scripts": [{
		"matches": [
			"file:///*"
		],
		"run_at": "document_end",
		"js": [
			"display_current_directory_list.js"
		]
	}, {
		"all_frames": true,
		"matches": [
			"file:///*?in-iframe"
		],
		"js": [
			"directory_list.js"
		]
	}]
}
